{
  "name": "dgwp.org",
  "private": true,
  "scripts": {
    "prestart": "npm run clean",
    "start": "hugo server",
    "prebuild": "npm run clean",
    "build": "hugo --minify",
    "clean": "rm -rf public resources",
    "ci": "npm install && npm run build",
    "dev": "npm-run-all --parallel start dev:*",
    "dev:safari": "sleep 1 && open -a Safari http://localhost:1313",
    "dev:sublime": "subl .",
    "lint": "npm-run-all --continue-on-error lint:*",
    "lint:scripts": "eslint assets/js",
    "lint:styles": "stylelint \"assets/styles/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint *.md content/**/*.md",
    "test": "npm run lint"
  },
  "browserlists": [
    "last 3 versions"
  ],
  "dependencies": {
    "@babel/cli": "^7.16",
    "@babel/core": "^7.16",
    "@babel/preset-env": "^7.16.5",
    "@csstools/normalize.css": "^12.0.0",
    "autoprefixer": "^10.4.0",
    "bourbon": "^7.0.0",
    "cssnano": "^5.0.14",
    "eslint": "^8.5.0",
    "flexsearch": "^0.7.21",
    "instant.page": "^5.1.0",
    "markdownlint-cli": "^0.30.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-standard": "^24.0.0"
  }
}
