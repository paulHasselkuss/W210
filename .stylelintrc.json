{
  "extends": "stylelint-config-recommended-scss",
  "ignoreFiles": [
    "node_modules",
    "**/vendor/*.scss"
  ],
  "rules": {
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "blockless-after-same-name-blockless",
          "first-nested"
        ],
        "ignore": [
          "after-comment",
          "inside-block"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "font-named-instance"
        ]
      }
    ]
  }
}
